{
  "compilerOptions": {
    "baseUrl": "./src/",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "esnext",
    "paths": {
      "API/*": ["API/*"],
      "Assets/*": ["Assets/*"],
      "Components/*": ["Components/*"],
      "Constants/*": ["Constants/*"],
      "Context/*": ["Context/*"],
      "Engine/*": ["Engine/*"],
      "Helpers/*": ["Helpers/*"],
      "Hooks/*": ["Hooks/*"],
      "Models/*": ["Models/*"],
      "Screens/*": ["Screens/*"],
      "Services/*": ["Services/*"],
      "Tests/*": ["Tests/*"],
      "Validator/*": ["Validator/*"]
    }
  },
  "exclude": ["node_modules/", "**/node_modules/*", "build"],
  "include": ["src/**/*"]
}
